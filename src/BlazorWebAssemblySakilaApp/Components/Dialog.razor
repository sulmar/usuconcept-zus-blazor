@code {

    [Parameter]
    public bool Opened { get; set; }

    [Parameter]
    public EventCallback OnDialogClose { get; set; }

    private void OnClose()
    {
        OnDialogClose.InvokeAsync();
    }

    private void OnCancel()
    {
        OnDialogClose.InvokeAsync();
    }

}
